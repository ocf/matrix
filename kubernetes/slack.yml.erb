apiVersion: v1
kind: Service
metadata:
  name: slack-bridge-service
spec:
  selector:
    app: slack-bridge
  ports:
    - name: slack-bridge-port
      port: 9805
      targetPort: 9805
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: slack-bridge
  labels:
    app: slack-bridge
spec:
  replicas: 1
  selector:
    matchLabels:
      app: slack-bridge
  template:
    metadata:
      labels:
        app: slack-bridge
    spec:
      containers:
        - name: slack-appservice-irc
          image: "matrixdotorg/matrix-appservice-slack:release-1.6.0"
          imagePullPolicy: Always
          ports:
            - containerPort: 9805
          volumeMounts:
            - name: slack-config
              mountPath: /data
              readOnly: true
      volumes:
        - name: slack-config
          secret:
            secretName: slack-config
